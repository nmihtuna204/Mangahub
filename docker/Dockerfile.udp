FROM golang:1.21-alpine AS builder

RUN apk add --no-cache git build-base

WORKDIR /build

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=1 GOOS=linux go build -o udp-server ./cmd/udp-server

FROM alpine:latest

RUN apk add --no-cache ca-certificates sqlite-libs

WORKDIR /app

COPY --from=builder /build/udp-server .
COPY configs/ ./configs/

EXPOSE 9091

CMD ["./udp-server"]
