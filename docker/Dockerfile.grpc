FROM golang:1.21-alpine AS builder

RUN apk add --no-cache git build-base

WORKDIR /build

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=1 GOOS=linux go build -o grpc-server ./cmd/grpc-server

FROM alpine:latest

RUN apk add --no-cache ca-certificates sqlite-libs

WORKDIR /app

COPY --from=builder /build/grpc-server .
COPY configs/ ./configs/

EXPOSE 9092

CMD ["./grpc-server"]
